<Window x:Class="CharAbilityEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Character and Ability Editor"
        Width="900" Height="600">

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Character and Ability Editor"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <Button Content="Load Game Definitions" Width="200" Height="40"
                    Click="LoadGameDefs_Click"/>
            <Button Content="Push Scripts to game/scripts/imported" Width="200" Height="40"
                    Click="PushScripts_Click"/>
        </StackPanel>
    </Grid>
</Window>